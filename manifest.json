{
  "manifest_version": 3,
  "name": "Why Did I Save This?",
  "description": "Remember why you bookmarked links.",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "background": {
    "service_worker": "src/pages/background/index.ts",
    "type": "module"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": ["activeTab", "storage"],
  "commands": {
    "open-save-link-modal": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Open The Extension to save a link"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icon-128.png", "icon-32.png"],
      "matches": []
    }
  ]
}
